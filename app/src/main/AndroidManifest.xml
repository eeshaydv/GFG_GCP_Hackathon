<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.medhere">

    <uses-permission android:name="android.permission.USE_FINGERPRINT" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-feature android:name="android.hardware.camera"></uses-feature>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.example.medhere.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths"/>
        </provider>

        <activity
            android:name=".activities.ScanImageActivity"
            android:exported="false" />
        <activity android:name=".activities.ProfileDetailsActivity" />
        <activity android:name=".activities.FingerPrintActivity" />
        <activity android:name=".activities.SettingsActivity" />
        <activity android:name=".authentication.ForgotPasswordActivity" />
        <activity android:name=".authentication.VerificationActivity" />
        <activity android:name=".activities.IndividualVitalInformationActivity" />
        <activity android:name=".activities.ParticularDayReportsActivity" />
        <activity android:name=".activities.VitalsInformationActivity" />
        <activity android:name=".activities.FollowUpsInputActivity" />
        <activity android:name=".activities.DetectedMedicinesActivity" />
        <activity android:name=".onBoardingActivities.UserDetailsActivity" />
        <activity
            android:name=".onBoardingActivities.IntroActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".onBoardingActivities.SplashScreen" />
        <activity android:name=".authentication.LoginActivity" />
        <activity android:name=".authentication.SignUpActivity" />
        <activity android:name=".activities.MainActivity" />
    </application>

</manifest>