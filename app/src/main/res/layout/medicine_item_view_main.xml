<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/custom_ripple">

<androidx.cardview.widget.CardView
    android:layout_width="wrap_content"
    fresco:cardCornerRadius="8dp"
    android:elevation="8dp"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/medicine_image"
        android:src="@drawable/icon"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:padding="8dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true" />

    <TextView
        android:id="@+id/medicine_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_toStartOf="@+id/medicine_image"
        android:layout_toLeftOf="@+id/medicine_image"
        android:fontFamily="sans-serif-light"
        android:padding="8dp"
        android:text="NAME"
        android:textColor="@color/intro_title_color"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/medicine_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/medicine_name"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_toStartOf="@+id/medicine_image"
        android:layout_toLeftOf="@+id/medicine_image"
        android:fontFamily="sans-serif-light"
        android:padding="8dp"
        android:text="Quantity"
        android:textColor="@color/intro_title_color"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/medicine_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/medicine_quantity"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_toStartOf="@+id/medicine_image"
        android:layout_toLeftOf="@+id/medicine_image"
        android:fontFamily="sans-serif-light"
        android:padding="8dp"
        android:text="Time"
        android:textColor="@color/intro_title_color"
        android:textSize="20sp" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/ll_schedule"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="#ebebeb" />

    <LinearLayout
        android:id="@+id/ll_schedule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/medicine_image"
        android:layout_marginTop="6dp">

        <Button
            android:id="@+id/edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/medicine_image"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:background="@drawable/button1"
            android:gravity="center"
            android:padding="8dp"
            android:text="EDIT"
            android:textColor="@color/intro_title_color" />

        <Button
            android:id="@+id/delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/medicine_image"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:background="@drawable/button1"
            android:gravity="center"
            android:padding="8dp"
            android:text="DELETE"
            android:textColor="@color/intro_title_color" />
        <Button
            android:id="@+id/shop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/medicine_image"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:background="@drawable/button1"
            android:gravity="center"
            android:padding="8dp"
            android:text="BUY"
            android:textColor="@color/intro_title_color" />

    </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>

</RelativeLayout>
