<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/custom_ripple">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        fresco:cardCornerRadius="8dp"
        android:clickable="true"
        android:elevation="8dp"
        android:padding="8dp"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:padding="8dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/vital_reading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_toStartOf="@+id/medicine_image"
                android:layout_toLeftOf="@+id/medicine_image"
                android:fontFamily="sans-serif-light"
                android:padding="8dp"
                android:text="Vital"
                android:textColor="@color/intro_title_color"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/date_of_visit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vital_reading"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_toStartOf="@+id/medicine_image"
                android:layout_toLeftOf="@+id/medicine_image"
                android:fontFamily="sans-serif-light"
                android:maxLines="1"
                android:padding="8dp"
                android:text="DATE OF VISIT"
                android:textColor="@color/intro_title_color"
                android:textSize="16sp" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>