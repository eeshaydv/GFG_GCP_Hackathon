<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#EAEAEA"
    tools:context=".activities.VitalsInformationActivity">
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/llayout"
        android:background="#EAEAEA"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:fontFamily="@font/droid_sans_chinese"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text=" Enter your Vital Details "
            android:textColor="@color/colorPrimaryDark"
            android:textSize="24dp" />


    </LinearLayout>

    <ImageView
        android:layout_width="100dp"
        android:layout_below="@id/llayout"
        android:layout_margin="16dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/groupIcon"
        android:src="@drawable/icon"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button2"
        android:layout_below="@id/groupIcon"
        android:padding="8dp"
        android:textSize="16sp"
        android:layout_marginTop="24dp"
        android:hint="Blood Pressure"
        android:id="@+id/bp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button2"
        android:layout_below="@id/bp"
        android:padding="8dp"
        android:textSize="16sp"
        android:layout_marginTop="24dp"
        android:hint="Weight"
        android:id="@+id/weight"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button2"
        android:layout_below="@id/weight"
        android:padding="8dp"
        android:textSize="16sp"
        android:layout_marginTop="24dp"
        android:hint="Height"
        android:id="@+id/height"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button2"
        android:layout_below="@id/weight"
        android:padding="8dp"
        android:textSize="16sp"
        android:layout_marginTop="24dp"
        android:hint="Temperature"
        android:id="@+id/temp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button2"
        android:layout_below="@id/temp"
        android:padding="8dp"
        android:textSize="16sp"
        android:layout_marginTop="24dp"
        android:hint="SpO2"
        android:id="@+id/spo2"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button2"
        android:layout_below="@id/spo2"
        android:padding="8dp"
        android:textSize="16sp"
        android:layout_marginTop="24dp"
        android:hint="Sugar"
        android:id="@+id/sugar"
        />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:elevation="8dp"
        android:clickable="true"
        android:src="@drawable/ic_baseline_done_24"
        android:layout_alignParentRight="true"
        android:id="@+id/addVitalInfo"/>


</RelativeLayout>