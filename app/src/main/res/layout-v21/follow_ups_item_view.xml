<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/custom_ripple">
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        app:cardCornerRadius="8dp"
        android:elevation="8dp"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/add_location"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_baseline_add_location_24"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:padding="8dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true" />

    <TextView
        android:id="@+id/doctor_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_toStartOf="@+id/medicine_image"
        android:layout_toLeftOf="@+id/medicine_image"
        android:fontFamily="sans-serif-light"
        android:maxLines="1"
        android:padding="8dp"
        android:text="DOCTOR NAME"
        android:textColor="@color/intro_title_color"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/doctor_name"
        android:layout_toStartOf="@+id/medicine_image"
        android:layout_toLeftOf="@+id/medicine_image"
        android:fontFamily="sans-serif-light"
        android:maxLines="1"
        android:padding="8dp"
        android:text="TIME"
        android:textColor="@color/intro_title_color"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/time"
        android:layout_toStartOf="@+id/medicine_image"
        android:layout_toLeftOf="@+id/medicine_image"
        android:fontFamily="sans-serif-light"
        android:maxLines="1"
        android:padding="8dp"
        android:text="DATE"
        android:textColor="@color/intro_title_color"
        android:textSize="20sp" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/ll_schedule"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="#ebebeb" />

    <LinearLayout
        android:id="@+id/ll_schedule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/add_location"
        android:layout_marginTop="6dp">

        <Button
            android:id="@+id/schedule_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/medicine_image"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:background="@drawable/button1"
            android:gravity="center"
            android:padding="8dp"
            android:text="EDIT"
            android:textColor="@color/intro_title_color" />

        <Button
            android:id="@+id/schedule_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/medicine_image"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:background="@drawable/button1"
            android:gravity="center"
            android:padding="8dp"
            android:text="DELETE"
            android:textColor="@color/intro_title_color" />

    </LinearLayout>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>